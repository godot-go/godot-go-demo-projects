{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:HOME}/bin/godot",
            "args": [
                "--verbose",
                "--debug",
                "--path",
                "--editor",
                "test/project"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "launchCompleteCommand": "exec-run",
            "environment": [
                {
                    "name": "GOTRACEBACK",
                    "value": "crash"
                },
                {
                    "name": "GODEBUG",
                    "value": "asyncpreemptoff=1,cgocheck=1,invalidptr=1,clobberfree=1,tracebackancestors=3"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "debug"
                }
            ],
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "gdb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "./github.com/godot-go/godot-go-demo-projects/": "/home/pcting/workspace/godot-go-demo-projects/",
                "./github.com/godot-go/godot-go/": "/home/pcting/workspace/godot-go/",
                "./": "/home/pcting/.gvm/pkgsets/go1.15.2/global/pkg/mod/"
            }
        }
    ]
}